# ===========================================
# EDUCONNECT BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in your values

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=educonnect_user
DB_PASSWORD=educonnect_password
DB_DATABASE=educonnect_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Application
NODE_ENV=development
PORT=3000

# CORS
CORS_ORIGIN=http://localhost:5173

# Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=52428800

# ===========================================
# WEBRTC CONFIGURATION (Production)
# ===========================================
# Without TURN server, WebRTC may fail for users behind symmetric NAT

# TURN Server (coturn or Twilio/Xirsys)
# TURN_SERVER_URL=turn:your-turn-server.com:3478
# TURNS_SERVER_URL=turns:your-turn-server.com:5349
# TURN_USERNAME=your-turn-username
# TURN_CREDENTIAL=your-turn-password

# For coturn REST API (time-limited credentials)
# TURN_STATIC_SECRET=your-coturn-static-secret

# Force relay mode (hide user IPs)
# WEBRTC_FORCE_RELAY=false

# ===========================================
# REDIS (for scaling Socket.IO)
# ===========================================
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=
